# Backend Environment Variables
# Backend Ortam Değişkenleri

# Server Configuration
# Sunucu Yapılandırması
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# Firebase Configuration
# Firebase Yapılandırması

# Option 1: JSON String (for production/cloud deployments)
# Seçenek 1: JSON String (production/bulut deployment'ları için)
# SERVICE_ACCOUNT_JSON='{"type":"service_account","project_id":"veratoptan-c4d30","private_key":"-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n",...}'

# Option 2: Base64 Encoded JSON (for production/cloud deployments - Recommended)
# Seçenek 2: Base64 Kodlanmış JSON (production/bulut deployment'ları için - Önerilen)
# SERVICE_ACCOUNT_JSON="<base64_encoded_json_string>"

# Option 3: File Path (for local development - CURRENTLY ACTIVE)
# Seçenek 3: Dosya Yolu (yerel geliştirme için - ŞU AN AKTİF)
SERVICE_ACCOUNT_PATH=../config/secrets/veratoptan-c4d30-firebase-adminsdk-fbsvc-4f7165d9f5.json

# Firebase Project ID (optional, can be read from service account)
# Firebase Proje ID (opsiyonel, servis hesabından okunabilir)
FIREBASE_PROJECT_ID=veratoptan-c4d30

# Firebase Project Number / GCM Sender ID
# Firebase Proje Numarası / GCM Gönderen ID
FIREBASE_PROJECT_NUMBER=989392397922

# CORS Configuration
# CORS Yapılandırması
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# Logging Configuration
# Loglama Yapılandırması
LOG_REQUESTS=true
LOG_LEVEL=info

# Notification Defaults
# Bildirim Varsayılanları
ANDROID_CHANNEL_ID=new-products
NOTIFICATION_SOUND=notification.mp3
NOTIFICATION_PRIORITY=high

# Security Configuration
# Güvenlik Yapılandırması
MAX_REQUEST_SIZE=10
RATE_LIMIT=60
