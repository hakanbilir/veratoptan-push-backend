# Backend Environment Variables
# Backend Ortam Değişkenleri

# ============================================
# Server Configuration
# Sunucu Yapılandırması
# ============================================
PORT=3000
HOST=0.0.0.0
NODE_ENV=development

# ============================================
# Firebase Configuration
# Firebase Yapılandırması
# ============================================
FIREBASE_PROJECT_ID=veratoptan-c4d30
FIREBASE_PROJECT_NUMBER=989392397922
SERVICE_ACCOUNT_PATH=../config/secrets/veratoptan-c4d30-firebase-adminsdk-fbsvc-4f7165d9f5.json

# ============================================
# CORS Configuration
# CORS Yapılandırması
# ============================================
CORS_ORIGINS=*
CORS_CREDENTIALS=true

# ============================================
# Logging Configuration
# Loglama Yapılandırması
# ============================================
LOG_REQUESTS=true
LOG_LEVEL=info

# ============================================
# Notification Defaults
# Bildirim Varsayılanları
# ============================================
ANDROID_CHANNEL_ID=new-products
NOTIFICATION_SOUND=notification.mp3
NOTIFICATION_PRIORITY=high

# ============================================
# Security Configuration
# Güvenlik Yapılandırması
# ============================================
MAX_REQUEST_SIZE=10
RATE_LIMIT=60

# ============================================
# Default FCM Tokens (comma-separated)
# Varsayılan FCM Token'ları (virgülle ayrılmış)
# ============================================
# Example: DEFAULT_FCM_TOKENS=token1,token2,token3
# Örnek: DEFAULT_FCM_TOKENS=token1,token2,token3
DEFAULT_FCM_TOKENS=

# Auto-load default tokens on startup
# Başlangıçta varsayılan token'ları otomatik yükle
AUTO_LOAD_TOKENS=true

# Default device info for hardcoded tokens
# Hardcode edilmiş token'lar için varsayılan cihaz bilgisi
DEFAULT_DEVICE_PLATFORM=unknown
DEFAULT_APP_VERSION=1.0.0
